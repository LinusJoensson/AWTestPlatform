@model TestPlatform.Models.Test

<form asp-action="CreateTest" asp-controller="Admin" role="form" class="form">
    <fieldset>
        <fieldset>Add testdetails</fieldset>
        <div class="form-group">
            <label asp-for="Name">Test Name</label>
            <input asp-for="Name" placeholder="Test name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" placeholder="Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <input type="submit" value="Create Test" class="btn btn-default" />
    </fieldset>
</form>