    function PartialPreview(id) {
        $.get("/Admin/PreviewQuestionPartial",
            { id: id },
            function (data) {
                var showHidePreview = "#btnPreview" + id;
                var previewContent = "#detailsDiv" + id;

                $(previewContent).html("</br>" + data);
