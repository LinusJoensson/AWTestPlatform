                    $(showHidePreview).removeClass("fa-chevron-up");
                    $(showHidePreview).addClass("fa-chevron-down");

                    $(showHidePreview).attr("title", "Show")
                        .tooltip("fixTitle")
                        .tooltip("hide");
                }
                else {
                    $(showHidePreview).removeClass("fa-chevron-down");
                    $(showHidePreview).addClass("fa-chevron-up");

