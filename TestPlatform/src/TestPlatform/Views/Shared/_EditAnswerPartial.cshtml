@model AnswerDetailVM

@if(!Model.IsInPreview)
{ 
<div>
    <textarea asp-for="@Model.AnswerText" placeholder="@Model.AnswerText" id=@("mceAnswerBox"+Model.AnswerId) class="mceAnswerBox"></textarea>
    <span asp-validation-for="@Model.AnswerText" class="text-danger"></span>
</div>
}
else
{
    if(Model.QuestionType == TestPlatform.Models.Enums.QuestionType.SingleChoice)
    {
            <input type="radio"
                   readonly
                   @(Model.IsChecked ? "checked=\"checked\"" : "") />

            @(Html.Raw(Model.AnswerText))
    }

    else if (Model.QuestionType == TestPlatform.Models.Enums.QuestionType.MultipleChoice)
    {
            <input type = "checkbox"
                    readonly
                   @(Model.IsChecked ? "checked=\"checked\"" : "") />

            @(Html.Raw(Model.AnswerText))
     }
}

