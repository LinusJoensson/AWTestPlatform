@model IGridableVM

    <table>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    <label for="@($" Item{item.Id}")">
                        <input type="checkbox"
                               id="@($" ItemId{@item.Id}")"
                               name="@nameof(Model.SelectedItems)"
                               value="@item.Id" />
                    </label>

                    @if (Model.ItemType == TestPlatform.Models.Enums.GridItemType.Question)
                    {   
                        <p>
                            Question Name: @item.Name
                            Question Id: @item.Id
                        </p>
                    }


                </td>
            </tr>
        }
    </table>

 
